{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["custom.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.css"],
  "exclude": ["node_modules", "dist", "*.test.*", "assets"]
}
